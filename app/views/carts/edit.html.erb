


<h2>Your Shopping Cart
<table class="table table-stripped table-hover"></table></h2>
 <thead>
   <tr>
     <th>Product</th>
     <th>Quantity</th>
     <th>Unit Price</th>
     <th>Total Price</th>
   </tr>
 </thead>

 <body>
  <tr>
   <%=@cart.line_items.each do |item| %>
   <tr><%= item.procduct %></tr>
   <tr><%= item.Quantity %></tr>
   <tr><%= number_to_currency(item.price) %></tr>
   <tr><%= number_to_currency(item.total_price) %></tr>

 </tr>
 <% end%>
 </body>
 <table>

<h3>Order subtotal: <%= number_to_currency(@cart.subtotal)%> </h3>

<%= link_to 'continue shopping', shop_path, class: 'btn btn-success btn-sm' %>
<%= link_to 'Empty Cart', @cart, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
<%= link_to 'Checkout', new_order_path, class: 'btn btn-danger btn-sm' %>